
@inject NavigationManager Navigation
<div class="header blue  shadow tab bottom">
    <button class="navLink @IsActive(RoutelinkName.workbenches)" @onclick=@(()=>OnNavLink(RoutelinkName.workbenches))>
        <div class="tabtext" >
            <p class="iconfont icon-gongzuotai"></p>
            <p class="text-bold text-small ">工作台</p>
        </div>
    </button>
    <button class="navLink @IsActive(RoutelinkName.achievements)" @onclick=@(()=>OnNavLink(RoutelinkName.achievements))>
        <div class="tabtext">
            <p class="iconfont icon-yeji"></p>
            <p class="text-bold text-small ">业绩</p>
        </div>
    </button>
    <button class="navLink @IsActive(RoutelinkName.message)" @onclick=@(()=>OnNavLink(RoutelinkName.message))>
        <div class="tabtext">
            <p class="iconfont icon-message"></p>
            <p class="text-bold text-small ">消息</p>
        </div>
    </button>
    <button class="navLink @IsActive(RoutelinkName.my)" @onclick=@(()=>OnNavLink(RoutelinkName.my))>
        <div class="tabtext">
            <p class="iconfont icon-tech"></p>
            <p class="text-bold text-small ">我的</p>
        </div>
    </button>
</div>
@code{
    public RoutelinkName tab { get; set; } = RoutelinkName.workbenches;

    public string IsActive(RoutelinkName val)
    {
        if (val == tab)
            return "active";

        return " ";
    }

    public void OnNavLink(RoutelinkName linkName)
    {
        tab = linkName;
        switch (linkName)
        {
            case RoutelinkName.achievements:
                Navigation.NavigateTo("/" + RoutelinkName.achievements.ToString());
                break;
            case RoutelinkName.workbenches:
                Navigation.NavigateTo("/" + RoutelinkName.workbenches.ToString());
                break;
            case RoutelinkName.my:
                Navigation.NavigateTo("/" + RoutelinkName.my.ToString());
                break;
            case RoutelinkName.message:
                Navigation.NavigateTo("/" + RoutelinkName.message.ToString());
                break;
            default:
                break;
        }    
    
    }

}
